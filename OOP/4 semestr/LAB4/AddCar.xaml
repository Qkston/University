        <RadioButton x:Name="radioButton2" Content="Спортивний" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="114,161,0,0" Foreground="White" FontSize="9"/>
        <RadioButton x:Name="radioButton3" Content="Кабріолет" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="189,161,0,0" Foreground="White" FontSize="9"/>
