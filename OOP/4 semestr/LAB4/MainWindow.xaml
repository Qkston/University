<Window x:Class="LAB4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB4"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" WindowStyle="ThreeDBorderWindow">

    <Grid x:Name="MainGrid" Background="#FFA4A4A4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*"/>
            <ColumnDefinition Width="23*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Margin="662,510,10,0" x:Name="Category" ItemsSource="{Binding Source={local:Category {x:Type local:TypeValue}}}" Grid.ColumnSpan="2" Height="22" VerticalAlignment="Top"/>
        <ListBox Margin="10,10,10,89" IsSynchronizedWithCurrentItem="False" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
